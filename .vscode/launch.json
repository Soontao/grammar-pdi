{
  "version": "2.0.0",
  "configurations": [
    {
      "type": "node",
      "name": "jest-tests",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    },
    {
      "name": "antlr4-bodl-basic",
      "type": "antlr-debug",
      "request": "launch",
      "input": "bodl/examples/basic.bo",
      "grammar": "bodl/BODLParser.g4",
      "startRule": "program",
      "printParseTree": true,
      "visualParseTree": true
    },
    {
      "name": "antlr4-bodl-complex",
      "type": "antlr-debug",
      "request": "launch",
      "input": "bodl/examples/complex.bo",
      "grammar": "bodl/BODLParser.g4",
      "startRule": "program",
      "printParseTree": true,
      "visualParseTree": true
    },
    {
      "name": "antlr4-bodl-custom-annotation",
      "type": "antlr-debug",
      "request": "launch",
      "input": "bodl/examples/custom_annotation.bo",
      "grammar": "bodl/BODLParser.g4",
      "startRule": "program",
      "printParseTree": true,
      "visualParseTree": true
    },
    {
      "name": "antlr4-absl-basic",
      "type": "antlr-debug",
      "request": "launch",
      "input": "absl/examples/basic.absl",
      "grammar": "absl/ABSLParser.g4",
      "startRule": "program",
      "visualParseTree": true
    },
  ]
}